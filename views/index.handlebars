<h1>Eat-Da-Burger</h1>

  <div class="container">
    <div class="row">
      <div class="col-6">
        <h5>Burgers Available</h5>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col-6">
        <h5>Burgers Eaten</h5>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>

<h2>Add your own Burger!</h2>

<div class="row">
  <div class="col-12">
    <form action="/burgers" method="POST">
      <input type="text" id="burgerName" name="burger_name" placeholder="Enter your burger name">
      <button type="submit" class="addBurgerBtn">Submit</button>
    </form>
  </div>
</div>
